
@{
    ViewData["Title"] = "GettingStarted";
    Layout = "~/Views/Shared/_CreateProfileLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pt-4 pb-5">
                    <h3> Getting Started </h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title pt-3 pb-3"> fill out your profile to activate your account </h5>
                    <div class="container-fluid align-content-center border-dark">
                        <div class="mt-4 container-fluid align-content-center text-center border-dark">
                            <div class="text-center pb-5">
                                <a asp-action="Category" asp-controller="Account" style="all:unset;padding: 10px 150px;text-align: center;text-decoration: none;display: inline-block;cursor: pointer;border-radius: 20px;border:1px solid lightgray" class="text-success bg-white">
                                    <h5> Let's Start </h5>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div>
</div>
