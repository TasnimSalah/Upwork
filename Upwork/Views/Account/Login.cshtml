@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="mt-4 container text-center" style="padding:20px;border:1px solid lightgray;width:600px">
    <h1>
        Log in to Upwork
    </h1>
    <form asp-action="Login" asp-controller="Account">
        <div class="row mb-3 mt-3">
            <div class="input-group col-12">
                <div class="input-group-prepend">
                    <span class="input-group-text fa fa-user" style="font-size:22px"></span>
                </div>
                <input type="text" asp-for="Email" class="form-control txtEmail" placeholder="Email">
            </div>
            <span class="text-danger ml-5 mt-2" asp-validation-for="Email"></span>
        </div>
        <div class="row mb-3 mt-3">
            <div class="input-group col-12">
                <div class="input-group-prepend">
                    <span class="input-group-text fa fa-lock" style="font-size:22px"></span>
                </div>
                <input type="password" asp-for="Password" class="form-control txtEmail" placeholder="Password">
            </div>
            <span class="text-danger  ml-5 mt-2" asp-validation-for="Password"></span>
            @if (ViewBag.Message != null)
            {
                <span id="InvalidErrorMsg" class="text-danger offset-3 mt-2"> @ViewBag.Message </span>
            }
        </div>
        <div class="container-fluid align-content-center text-center border-dark">
            <div class="row pb-3">
                <button type="submit" style="all:unset;padding: 10px 200px;text-align: center;text-decoration: none;display: inline-block;margin: 4px 2px;cursor: pointer;border-radius: 20px" class="bg-success text-white">
                    <span>  Continue with Email </span>
                </button>
            </div>
        </div>
    </form>
    <div class="row ml-3">
        <div class="col-5">
            <hr />
        </div>
        <div class="col-1">
            <p class="text-muted"> or </p>
        </div>
        <div class="col-5">
            <hr />
        </div>
    </div>
    <a asp-action="GoogleLogin" asp-controller="Account">
        <div class="row bg-primary col-12 mb-3 mt-3 ml-1" style="border-radius:23px;font-weight:500;padding:1px;width:550px">
            <div>
                <img style="border-radius:50%;width:50px;height:50px;background-color:white" src="~/Images/google.png" />
            </div>
            <div class="offset-2 col-6 pt-3 text-white">
                Continue with Google
            </div>
        </div>
    </a>
    @if (ViewBag.GoogleMessage != null)
    {
        <span class="text-danger offset-1 pt-2 pb-2"> @ViewBag.GoogleMessage </span>
    }
    <a>
        <div class="container-fluid align-content-center text-center border-dark mb-3">
            <div class="row pb-3">
                <div id="AppleDiv" style="all:unset;border:1px solid black;padding: 10px 190px;text-align: center;text-decoration: none;display: inline-block;margin: 4px 2px;cursor: pointer;border-radius: 20px;background-color:#F1F2F4;color:black;font-weight:500">
                    <span class="fa fa-apple-alt"></span>
                    Continue with Apple
                </div>
            </div>
        </div>
    </a>
</div>
<div class="container text-center" style="padding:20px;border:1px solid lightgray;width:600px">
    <div class="row mt-3">
        <div class="col-2 offset-1">
            <hr />
        </div>
        <div class="col-6">
            <h5 class="text-muted"> Don't have Upwork account? </h5>
        </div>
        <div class="col-2">
            <hr />
        </div>
    </div>
    <div class="mt-3 container-fluid align-content-center text-center border-dark">
        <div class="text-center pb-3">
            <a asp-action="Signup" asp-controller="Account" style="all:unset;padding: 10px 70px;text-align: center;text-decoration: none;display: inline-block;margin: 4px 2px;cursor: pointer;border-radius: 20px;border:1px solid green;background-color:#F1F2F4" class="text-success">
                <span>  Sign Up </span>
            </a>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(".txtEmail").keydown(function () {
            $("#InvalidErrorMsg").hide();
        });
    </script>
}
