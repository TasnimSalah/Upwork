
@{
    ViewData["Title"] = "Overview";
    Layout = "~/Views/Shared/_CreateProfileLayout.cshtml";
}


<div class="container" style="margin-top:10px">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4> Title & Overview </h4>
                    <p class="text-muted"> 9 of 12 </p>
                </div>
                <form asp-action="Overview">
                    <div class="card-body">
                        <div class="container-fluid align-content-center border-dark mb-4">
                            <h6 class="mb-3"> Title <span class="fa fa-question-circle-o" style="color:forestgreen"></span> </h6>
                            <input type="text" class="form-control" placeholder=" Example: Accounting & Consulting " />
                        </div>
                        <div class="container-fluid align-content-center border-dark mb-4">
                            <h6 class="mb-3"> Professional Overview <span class="fa fa-question-circle-o" style="color:forestgreen"></span> </h6>
                            <textarea style="height:150px" class="form-control" placeholder="Highlight your top skills, experience, and interests. This is one of the first things clients will see on your profile."></textarea>
                        </div>
                    </div>
                    <div class="card-footer" style="height:100px">
                        <div class="container-fluid">
                            <div class="row" style="margin-top:17px">
                                <div class="col-2">
                                    <a asp-action="HourlyRate" asp-controller="Account" class="btn text-success bg-white" style="border-color:lightgrey">Back</a>
                                </div>
                                <div class="offset-8 text-right">
                                    <button type="submit" class="btn btn-success" style="border-color:lightgrey;">Next</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
