@model Country
@{
    ViewData["Title"] = "Country Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-div-6 offset-3">
    <br /><br />
    <div>
        <div class="box-8">
            <div class="content-box">
                <p>Details</p>
                <br />
                <p style="font-size:20px; color: white;"> Country Name: </p>
                <p style="font-size:20px; margin-left: 100px; color:#f7403b;"> @Model.Name </p>
                <p style="font-size:20px; color: white;"> Key: </p>
                <p class="mb-2" style="font-size:20px; margin-left: 100px; color:#f7403b;"> @Model.Key </p>
                <a asp-action="EditCountry" asp-controller="Admin" asp-route-id="@Model.CountryId" class="btn btn-success col-2 offset-4"> Edit </a>
                <a asp-action="Countries" asp-controller="Admin" class="btn btn-info col-2"> Back </a>
            </div>
        </div>
    </div>
</div>

