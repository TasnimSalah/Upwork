@model SubCategory
@{
    ViewData["Title"] = "EditSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-div-6 offset-3 pt-4">
    <br /><br />
    <div class="pt-4 pb-4">
        <div class="box-8">
            <div class="content-box">
                <p> Edit SubCategory </p>
                <br />
                <form asp-action="EditSubCategory" asp-controller="Admin">
                    <div>
                        <input type="text" hidden asp-for="SubCategoryId"/>
                        <input asp-for="Name" type="text" placeholder="Enter SubCategory name here..." class="form-control" />
                        <span asp-validation-for="Name" style="font-size:22px" class="mt-2 text-danger row ml-5"></span>
                    </div>
                    <div>
                        <select class="custom-select" asp-for="CategoryId" asp-items="ViewBag.CategoryId" aria-label="Default select example">
                            <option selected disabled hidden>
                                Select a category
                            </option>
                        </select>
                        <span asp-validation-for="CategoryId" style="font-size:22px" class="mt-2 text-danger row ml-5">  </span>
                    </div>
                    <button type="submit" class="btn btn-success col-2 offset-4"> Edit </button>
                    <a asp-action="SubCategories" asp-controller="Admin" class="btn btn-info col-2"> Back </a>
                </form>
            </div>
        </div>
    </div>
</div>

