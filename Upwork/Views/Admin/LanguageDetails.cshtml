@model Language
@{
    ViewData["Title"] = "Language Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-div-6 offset-3">
    <br /><br />
    <div>
        <div class="box-8">
            <div class="content-box">
                <p>Details</p>
                <br />
                <p style="font-size:20px; color: white;"> Language Name: </p>
                <p class="pb-3" style="font-size:20px; margin-left: 100px; color:#f7403b;"> @Model.Name </p>                
                <a asp-action="EditLanguage" asp-controller="Admin" asp-route-id="@Model.LanguageId" class="btn btn-success col-2 offset-4"> Edit </a>
                <a asp-action="Languages" asp-controller="Admin" class="btn btn-info col-2"> Back </a>
            </div>
        </div>
    </div>
</div>


