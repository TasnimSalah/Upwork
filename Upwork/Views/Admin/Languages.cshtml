@model List<Language>
    @{
        ViewData["Title"] = "Languages";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="clearfix"></div>
    <div class="col-div-12">
        <div>
            <div class="content-box">

                <p style="font-size:30px"> Languages </p>
                <br />
                <a class="btn btn-outline-warning" asp-action="CreateLanguage" asp-controller="Admin"> Create new Language </a>
                <table>
                    <tr>
                        <th> Name </th>
                        <th> Operations </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Name </td>
                            <td>
                                <a asp-action="LanguageDetails" asp-route-id="@item.LanguageId" asp-controller="Admin" style="cursor:pointer">
                                    <span style="font-size:20px" class="fa fa-info-circle text-info"></span>
                                </a>
                                <a asp-action="EditLanguage" asp-route-id="@item.LanguageId" asp-controller="Admin" class="ml-2" style="cursor:pointer">
                                    <span style="font-size:20px" class="fa fa-edit text-secondary"></span>
                                </a>
                                @*
                                    <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" asp-controller="Admin" class="ml-2" style="cursor:pointer">
                                        <span style="font-size:20px" class="fa fa-trash text-danger"></span>
                                    </a>  *@
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>



