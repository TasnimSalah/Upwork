@model IdentityRole
@{
    ViewData["Title"] = "Role Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-div-6 offset-3">
    <br /><br />
    <div>
        <div class="box-8">
            <div class="content-box">
                <p>Details</p>
                <br />
                <p style="font-size:20px; color: white;"> Role Name: </p>
                <p style="font-size:20px; margin-left: 100px; color:#f7403b;"> @Model.Name </p>
                <p style="font-size:20px; margin-top: 5px; color: white;">
                    Number of users in this Role:
                </p>
                <p class="mb-3" style="font-size:20px; margin-left: 100px; color:#f7403b;"> @ViewBag.NumberOfUsers </p>
                <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-success col-2 offset-4"> Edit </a>
                <a asp-action="Roles" asp-controller="Admin" class="btn btn-info col-2"> Back </a>
            </div>
        </div>
    </div>
</div>

