@model List<Skill>
@{
    ViewData["Title"] = "Skills";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="clearfix"></div>
<div class="col-div-12">
    <div>
        <div class="content-box">

            <p style="font-size:30px"> Skills </p>
            <br />
            <a class="btn btn-outline-warning" asp-action="CreateSkill" asp-controller="Admin"> Create new Skill </a>
            <table>
                <tr>
                    <th> Name </th>
                    <th> SubCategory </th>
                    <th> Operations </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Name </td>
                        <td> @item.SubCategory.Name </td>
                        <td>
                            <a asp-action="SkillDetails" asp-route-id="@item.SkillId" asp-controller="Admin" style="cursor:pointer">
                                <span style="font-size:20px" class="fa fa-info-circle text-info"></span>
                            </a>
                            <a asp-action="EditSkill" asp-route-id="@item.SkillId" asp-controller="Admin" class="ml-2" style="cursor:pointer">
                                <span style="font-size:20px" class="fa fa-edit text-secondary"></span>
                            </a>
                            @*
                                <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" asp-controller="Admin" class="ml-2" style="cursor:pointer">
                                    <span style="font-size:20px" class="fa fa-trash text-danger"></span>
                                </a>  *@
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
