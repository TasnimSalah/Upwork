@model Upwork.Models.DbModels.Jobs

@{
    ViewData["Title"] = "Post Job Page";
    Layout = "_ClientLayout";
}

<div class="m-0 mx-lg-auto px-xl-3 py-xl-4 py-md-4 px-md-5 m-0 px-lg-5 px-3 py-0 w-100">
    <div class="row m-0 w-100">
        <div class="col-12 p-0 w-100">
            <div class="card px-3 my-2 mx-n3 my-md-4 mx-md-n4 px-md-4 w-100">
                <div class="card-header bg-white">
                    <h4>Getting Started</h4>
                </div>
                <div>
                    <div class="card-body">
                        <h5 class="card-title">What would you like to do?</h5>
                        <div class="align-content-center border-dark p-3">
                            <div class="row">
                                <div class="col-12">

                                    <div class="radio-group">
                                        <div class="row">
                                            <div class="col-12 radioBox">
                                                <label for="one" class="col-12 p-0">
                                                    <div class="radioBody">
                                                        <div class="text-left">
                                                            <input type="radio" id="one" name="Expertise-Level" checked />
                                                            <span class="checkround"></span>
                                                            <p class="ml-5">Create a new job post</p>

                                                            <div class="container-fluid align-content-center border-dark">
                                                                <div class="row">
                                                                    <div class="col-12 p-0">
                                                                        <form method="post" id="nextForm" asp-action="PostJob">
                                                                            <div class="radio-group">
                                                                                <div class="container">
                                                                                    <div class="row">
                                                                                        <div class='col-12 col-md-4 mr-md-3 mt-md-3 mb-md-3 card text-center radio radioBox ml-0 mb-2' data-value="firstType">
                                                                                            <label for="firstType">
                                                                                                <div class="card-body radioBody">
                                                                                                    <div class="text-right">
                                                                                                        <input type="radio" id="firstType" name="Type" value="ShortTime" asp-for="Type" />
                                                                                                        <span class="checkround"></span>
                                                                                                    </div>
                                                                                                    <i class="fa fa-clock-o mb-3" aria-hidden="true"></i>
                                                                                                    <h6 class="card-title mb-3">Short term or part time work</h6>
                                                                                                    <p class="card-text text-muted p-0 mb-0">Less than 30 hrs/week</p>
                                                                                                    <p class="card-text text-muted p-0">Less than 3 months</p>
                                                                                                </div>
                                                                                            </label>
                                                                                        </div>
                                                                                        <div class='col-12 col-md-4 m-md-3 card text-center radio radioBox mb-2' data-value="SecondType">
                                                                                            <label for="SecondType">
                                                                                                <div class="card-body radioBody">
                                                                                                    <div class="text-right">
                                                                                                        <input type="radio" id="SecondType" name="Type" value="LongTime" asp-for="Type" />
                                                                                                        <span class="checkround"></span>
                                                                                                    </div>
                                                                                                    <i class="fa fa-calendar-plus-o mb-3" aria-hidden="true"></i>
                                                                                                    <h6 class="card-title mb-3">Designated, longer term work</h6>
                                                                                                    <p class="card-text text-muted p-0 mb-0">More than 30 hrs/week</p>
                                                                                                    <p class="card-text text-muted p-0">3+ months</p>
                                                                                                </div>
                                                                                            </label>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                            <div class="col-12 radioBox">
                                                <label for="two">
                                                    <div class="radioBody">
                                                        <div class="text-left">
                                                            <input type="radio" id="two" name="Expertise-Level" />
                                                            <span class="checkround"></span>
                                                            <p class="ml-5">Edit an existing draft</p>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                            <div class="col-12 radioBox">
                                                <label for="three">
                                                    <div class="radioBody">
                                                        <div class="text-left">
                                                            <input type="radio" id="three" name="Expertise-Level" />
                                                            <span class="checkround"></span>
                                                            <p class="ml-5">Reuse a previous job post</p>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                    
                    <div class="card-footer bg-white">
                        <div class="container-fluid">
                            <div class="row text-right">
                                <div class="offset-8 col-2">
                                    <button class="btn text-success bg-white">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('.radio-group .container .row .radioBox').click(function () {
            console.log($(this))
            //console.log($(this)[0].children[0].children[0].children[0])
            //$(this)[0].children[0].children[0].children[0].checked=true;
            $(this).parent().find('.radioBox').removeClass('selected');
            $(this).addClass('selected');
            console.log($("#gotoSteps").children()[0]);
            $("#gotoSteps").children()[0].classList.remove('continueBtn');
            $("#gotoSteps").children()[0].classList.add('continueBtnEnable');
            var val = $(this).attr('data-value');
        });
        $("#gotoSteps").on('click','#submit',function (event) {

            //console.log("done");
            var date = new Date().toLocaleString();
            console.log(date);
            $("#nextForm").append("<input type='text' asp-for='CreateDate' value='" + date + "' name='CreateDate'/>");
            $("#nextForm").append("<button type='submit' id='go'></button>");
            $("#go").click();
        })
    </script>

}