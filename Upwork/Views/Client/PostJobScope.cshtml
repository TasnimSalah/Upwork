@model Upwork.Models.DbModels.Jobs
@{
    ViewData["Title"] = "Steps";
    Layout = "_PostJobStepsLayout";
}
<div>
    @section leftSide{
        <div id="Scope">
            <div style="padding-top: 85px;">
                <h1 class="mb-3">Next, estimate the scope of your work.</h1>
                <p class="mb-4">These aren’t final answers, but this information helps us recommend the right talent for what you need.</p>
            </div>
        </div>
    }
    @section TopLeftSide{
        <h1 class="mb-3">Next, estimate the scope of your work.</h1>
    }
    @section RightSide{
        <div>
            <form class="row m-0" id="ScopeDurationEx" method="post" asp-action="PostJobScope">
                <div class="col-12 py-2 px-0" id="JobScope">
                    <div id="scopeForm">
                        <div class="radio-group">
                            <div class="row m-0">
                                <div class="col-12 radioBox px-0">
                                    <label for="job-lg">
                                        <div class="radioBody">
                                            <div class="text-left py-2">
                                                <input type="radio" id="job-lg" name="Scope" asp-for="Scope" value="Large" required/>
                                                <span class="checkround my-2"></span>
                                                <h5 class="ml-4">Large</h5>
                                                <small class="text-muted ml-4">Longer term or complex initiatives (ex. design and build a full website)</small>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                                <div class="col-12 radioBox px-0">
                                    <label for="job-md">
                                        <div class="radioBody">
                                            <div class="text-left py-2">
                                                <input type="radio" id="job-md" name="Scope" asp-for="Scope" value="Medium" required/>
                                                <span class="checkround my-2"></span>
                                                <h5 class="ml-4">Medium</h5>
                                                <small class="text-muted ml-4">Well-defined projects (ex. a landing page)</small>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                                <div class="col-12 radioBox px-0">
                                    <label for="job-sm">
                                        <div class="radioBody">
                                            <div class="text-left py-2">
                                                <input type="radio" id="job-sm" name="Scope" asp-for="Scope" value="Small" required/>
                                                <span class="checkround my-2"></span>
                                                <h5 class="ml-4">Small</h5>
                                                <small class="text-muted ml-4">Quick and straightforward tasks (ex. update text and images on a webpage)</small>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row m-0 d-none" id="scopeDetails">
                        <div class="col-10 p-0">
                            <h5 class="mb-1" id="jobScopeName"></h5>
                            <span class="m-0 text-muted" id="jobScopeDesc" style="font-size: 12px;"></span>
                        </div>
                        <div class="col-2 p-0 text-right">
                            <div class="editScope" id="editScopeIcon">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 py-2 px-0 d-none" id="jobTimeContainer" style="border-top: 1px solid #d1d1d1;">
                    <div id="timeJobContaine">
                        <h4 class="m-0"> How long will your work take?</h4>
                        <div id="jobTimeForm">
                            <div class="radio-group">
                                <div class="row m-0">
                                    <div class="col-12 radioBox px-0">
                                        <label for="more6">
                                            <div class="radioBody">
                                                <div class="text-left py-2">
                                                    <input type="radio" id="more6" name="Duration" asp-for="Duration" value="6" required/>
                                                    <span class="checkround my-2"></span>
                                                    <h5 class="ml-4">More than 6 months</h5>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="col-12 radioBox px-0">
                                        <label for="between3-6">
                                            <div class="radioBody">
                                                <div class="text-left py-2">
                                                    <input type="radio" id="between3-6" name="Duration" asp-for="Duration" value="5" required/>
                                                    <span class="checkround my-2"></span>
                                                    <h5 class="ml-4">3 to 6 months</h5>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="col-12 radioBox px-0">
                                        <label for="less3">
                                            <div class="radioBody">
                                                <div class="text-left py-2">
                                                    <input type="radio" id="less3" name="Duration" asp-for="Duration" value="2" required/>
                                                    <span class="checkround my-2"></span>
                                                    <h5 class="ml-4">1 to 3 months</h5>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row m-0 d-none" id="jobTimeDetails">
                        <div class="col-10 p-0">
                            <h5 class="mb-1" id="timeSelected"></h5>
                        </div>
                        <div class="col-2 p-0 text-right">
                            <div class="editScope" id="editTimeIcon">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 py-2 px-0 d-none" id="jobExperianceContainer" style="border-top: 1px solid #d1d1d1;">
                    <div id="jobExpContainer">
                        <h4 class="m-0">What level of experience will it need?</h4>
                        <p class="text-muted mb-2">This won't restrict any proposals, but helps match expertise to your budget.</p>
                        <div id="jobExperianceForm">
                            <div class="radio-group">
                                <div class="row m-0">
                                    <div class="col-12 radioBox px-0">
                                        <label for="Entry-level">
                                            <div class="radioBody">
                                                <div class="text-left py-2">
                                                    <input type="radio" id="Entry-level" name="LevelOfExperience" asp-for="LevelOfExperience" value="Entry level" required/>
                                                    <span class="checkround my-2"></span>
                                                    <h5 class="ml-4">Entry level</h5>
                                                    <small class="text-muted ml-4">Looking for someone relatively new to this field</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="col-12 radioBox px-0">
                                        <label for="Intermediate-level">
                                            <div class="radioBody">
                                                <div class="text-left py-2">
                                                    <input type="radio" id="Intermediate-level" name="LevelOfExperience" asp-for="LevelOfExperience" value="Intermediate level" required/>
                                                    <span class="checkround my-2"></span>
                                                    <h5 class="ml-4">Intermediate level</h5>
                                                    <small class="text-muted ml-4">Looking for substantial experience in this field</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="col-12 radioBox px-0">
                                        <label for="Expert-level">
                                            <div class="radioBody">
                                                <div class="text-left py-2">
                                                    <input type="radio" id="Expert-level" name="LevelOfExperience" asp-for="LevelOfExperience" value="Expert level" required/>
                                                    <span class="checkround my-2"></span>
                                                    <h5 class="ml-4">Expert level</h5>
                                                    <small class="text-muted ml-4">Looking for comprehensive and deep expertise in this field</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row m-0 d-none" id="jobExperianceDetails">
                        <div class="col-10 p-0">
                            <h5 class="mb-1" id="ExpSelected"></h5>
                        </div>
                        <div class="col-2 p-0 text-right">
                            <div class="editScope" id="editExpIcon">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
</div>

@section Scripts2 {
    <script>
        $("#prorBar").children()[0].setAttribute("aria-valuenow", "75");
        $("#prorBar").children()[0].classList.add("w-75");
        $("#progressTop").children()[0].setAttribute("aria-valuenow", "75");
        $("#progressTop").children()[0].classList.add("w-75");
        $("#stepNumber").text("3 0f 4");
        $("#progressTitle").css("color", " #95df00");
        $("#progressSkills").css("color", " #95df00");
        $("#progressScope").css("color", " #95df00");
        $("#NextStep").text("Next:Budget");
        $("#PrevStep").attr("href", "/Client/PostJobSkills");

        for (var i = 0; i < $('input[name=Scope]').length; i++) {
            if ($('input[name=Scope]')[i].checked == true) {
                let JobScopeOnload = $('input[name=Scope]')[i].nextElementSibling.nextElementSibling.textContent;
                let JobScopeDescOnLOad = $('input[name=Scope]')[i].nextElementSibling.nextElementSibling.nextElementSibling.textContent;
                $("#jobScopeName").text(JobScopeOnload);
                $("#jobScopeDesc").text(JobScopeDescOnLOad);
                $("#scopeForm").addClass("d-none");
                $("#scopeDetails").removeClass("d-none");
                $("#jobTimeContainer").removeClass("d-none");
            }
        }
        for (var i = 0; i < $('input[name=Duration]').length; i++) {
            if ($('input[name=Duration]')[i].checked == true) {
                let timeselectedOnLoad = $('input[name=Duration]')[i].nextElementSibling.nextElementSibling.textContent;
                $("#timeSelected").text(timeselectedOnLoad);
                $("#timeJobContaine").addClass("d-none");
                $("#jobTimeDetails").removeClass("d-none");
                $("#jobExperianceContainer").removeClass("d-none");
            }
        }
        for (var i = 0; i < $('input[name=LevelOfExperience]').length; i++) {
            if ($('input[name=LevelOfExperience]')[i].checked == true) {
                let ExpselectedOnLoad = $('input[name=LevelOfExperience]')[i].nextElementSibling.nextElementSibling.textContent;
                $("#ExpSelected").text(ExpselectedOnLoad);
                $("#jobExpContainer").addClass("d-none");
                $("#jobExperianceDetails").removeClass("d-none");
                $("#continue").children()[0].classList.add('continueBtnEnable');
                $("#continue").children()[0].classList.remove('continueBtn');
            }
        }
        $("#scopeForm .radio-group .row .radioBox").click(function () {

            let JobScope = $(this).children()[0].firstElementChild.firstElementChild.firstElementChild.nextElementSibling.nextElementSibling.textContent;
            let JobScopeDesc = $(this).children()[0].firstElementChild.firstElementChild.firstElementChild.nextElementSibling.nextElementSibling.nextElementSibling.textContent;
            $("#jobScopeName").text(JobScope);
            $("#jobScopeDesc").text(JobScopeDesc);
            $("#scopeForm").addClass("d-none");
            $("#scopeDetails").removeClass("d-none");
            $("#jobTimeContainer").removeClass("d-none");

            // console.log($(this).children()[0].firstElementChild.firstElementChild.lastElementChild.text());
            //console.log($(this).children()[0].firstElementChild.firstElementChild.firstElementChild.nextElementSibling.nextElementSibling.textContent);
        });

        $("#editScopeIcon").click(function () {
            $("#scopeDetails").addClass("d-none");
            $("#scopeForm").removeClass("d-none");
        });

        $("#jobTimeForm .radio-group .row .radioBox").click(function () {

            let timeselected = $(this).children()[0].firstElementChild.firstElementChild.firstElementChild.nextElementSibling.nextElementSibling.textContent;
            $("#timeSelected").text(timeselected);
            $("#timeJobContaine").addClass("d-none");
            $("#jobTimeDetails").removeClass("d-none");
            $("#jobExperianceContainer").removeClass("d-none");

        });

        $("#editTimeIcon").click(function () {
            $("#timeJobContaine").removeClass("d-none");
            $("#jobTimeDetails").addClass("d-none");
        });


        $("#jobExperianceForm .radio-group .row .radioBox").click(function () {

            let Expselected = $(this).children()[0].firstElementChild.firstElementChild.firstElementChild.nextElementSibling.nextElementSibling.textContent;
            $("#ExpSelected").text(Expselected);
            $("#jobExpContainer").addClass("d-none");
            $("#jobExperianceDetails").removeClass("d-none");
            $("#continue").children()[0].classList.add('continueBtnEnable');
            $("#continue").children()[0].classList.remove('continueBtn');
        });

        $("#editExpIcon").click(function () {
            $("#jobExpContainer").removeClass("d-none");
            $("#jobExperianceDetails").addClass("d-none");
        });
       
        $("#continue").on('click', '#NextStep', function () {
            $("#ScopeDurationEx").append("<button type='submit' id='go' class='d-none'></button>");
            $("#go").click();
        })

        
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

