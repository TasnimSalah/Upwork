            $("#price").text(price);
            if (selected == "Starter") {
                console.log("starter");
                $("#standard").addClass("d-none");
                $("#advanced").addClass("d-none");
                $("#starter").removeClass("d-none");
            }
            if (selected == "Standard") {
                $("#starter").addClass("d-none");
                $("#advanced").addClass("d-none");
