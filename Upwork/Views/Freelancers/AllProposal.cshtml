@model IEnumerable<Upwork.Models.DbModels.Freelancer_Job>

@{
    ViewData["Title"] = "AllProposal";
    Layout = "~/Views/Shared/_FreelanceLayout.cshtml";
}
@section Style {
    <link href="~/css/FreelanceHomePage.css" rel="stylesheet" />
    <link href="~/css/SearchForJob.css" rel="stylesheet" />
}
<div class="row mt-0 mx-0 p-0 py-4 justify-content-center">
    <!--Project list-->
    <div class="col-md-9 col-12 p-0 mx-0">
        <div class="wrapper">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Proposal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Contract</a>
                </li>

            </ul>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div>
                        <!--Project list-->

                        @foreach (var item in Model)
                        {
                            <div class="card-body jobs">
                                <div class="container">
                                    <div class=" my-2 mx-2">
                                        <div class="row" style="display:-webkit-box; -webkit-box-align:center; ">
                                            <div class="col-9 text-left m-0 ">
                                                <a href=""><b>@item.Jobs.Title </b> </a>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="my-3">
                                        <div class="row mx-2">
                                            <div class="lightFont">
                                                @if (item.Jobs.TypeOfBudget == true)
                                                {<span>Fixed Price- Est.Budget:@item.Jobs.BudgetFrom</span>}
                                            else
                                            { <span>Hourly:@item.Jobs.BudgetFrom $ : @item.Jobs.BudgetTo $</span>}  - @item.Jobs.LevelOfExperience  - Posted @item.Jobs.CreateDate.ToString();
                                        </div>
                                    </div>
                                    <div class="row mx-2 my-1">
                                        <div class="jobDescription p-0 m-0 text-left">
                                            @item.Jobs.JobDescription
                                        </div>
                                    </div>
                                    <div class="row mx-2 my-3">
                                        <div class="skills">
                                            <div style="display:inline-flex;">

                                                @foreach (var skill in item.Jobs.jobsSkills)
                                                {
                                                    @foreach (var jobskill in ViewBag.Skills)
                                                    {
                                                        @if (jobskill.SkillId == skill.skillId)
                                                        {
                                                            <div class="jobSkills px-2 py-1 mr-2">@jobskill.Name</div>
                                                        }

                                                    }
                                                }

                                            </div>
                                        </div>

                                    </div>

                                    <div class="row mx-2 my-2">
                                        <div class="lightFont">
                                            Proposals : <span style="display:inline-block ;font-weight: 500;">Less than 5</span>
                                        </div>
                                    </div>

                                    <div class="row  mx-1 my-3 p-0">
                                        <div class="col-12 col-md-11 m-0 p-0">
                                            <div class="row m-0" style="display:-webkit-box; -webkit-box-align:center; ">


                                                <div class="col-4 col-md-3 m-0 p-0 mr-1" style="display:-webkit-box; -webkit-box-align:center; ">
                                                    <i class="fa fa-check-circle mr-1" style="color: #1f57c3; display: inline-block;" aria-hidden="true"></i>
                                                    <p class="lightFont my-auto">
                                                        Payment verified
                                                    </p>
                                                </div>
                                                <div class="col-4 col-md-3 m-0 p-0">
                                                    <div style="color: grey;">
                                                        <i class="fa fa-star checked mx-0 px-0" aria-hidden="true"></i>
                                                        <i class="fa fa-star checked mx-0 px-0" aria-hidden="true"></i>
                                                        <i class="fa fa-star checked mx-0 px-0" aria-hidden="true"></i>
                                                        <i class="fa fa-star mx-0 px-0" aria-hidden="true"></i>
                                                        <i class="fa fa-star mx-0 px-0" aria-hidden="true"></i>
                                                    </div>
                                                </div>
                                                <div class="col-3 m-0 p-0">
                                                    <p class="lightFont my-auto">$60k+ spent</p>
                                                </div>
                                                <div class="col-2 m-0 p-0" style="display:-webkit-box; -webkit-box-align:center; ">

                                                    <i class="fa fa-map-marker mr-1" aria-hidden="true" style="color: black;"></i>
                                                    <p class="lightFont my-auto">
                                                        Egypt
                                                    </p>
                                                </div>

                                            </div>

                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                        <!--End Project list-->
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row m-0 p-0 mt-3">
                        <div class="col-9 m-auto p-9">
                            <img src="~/Images/projectcatalog2.png" />
                            </div>
                        </div>
