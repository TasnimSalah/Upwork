@model AddEmployementViewModel
<div class="modal bg-white offset-3 col-6 mt-3" id="editEmployement">
    <div>
        <div class="modal-header mb-3">
            <h4 class="modal-title"> Edit Employement </h4>
            <button type="button" class="close" data-dismiss="modal">
                <span class="text-muted"> X </span>
            </button>
        </div>
        <form id="AddEmployementForm" asp-action="EditEmployement" asp-controller="Freelancers">
            <div class="modal-body">
                <div class="mb-4">
                    <input type="text" asp-for="OldCountryId" hidden />
                    <input type="text" asp-for="CompanyId" hidden />
                    <input type="text" asp-for="JobTitleId" hidden />
                    <h6 class="text-left" style="padding:0;margin:0"> Company </h6>
                    <input asp-for="Company" type="text" class="form-control mt-2" />
                    <span asp-validation-for="Company"></span>
                    <span id="SchoolErrorMsg" style="display:none" class="text-danger ml-3"> This field is required. </span>
                </div>
                <div class="mb-4">
                    <h6 class="text-left" style="padding:0;margin:0"> Location </h6>
                    <div class="row mt-2">
                        <div class="col-6">
                            <input asp-for="Location" type="text" class="form-control" placeholder="City" />
                        </div>
                        <div class="col-6">
                            <select asp-items="ViewBag.CountryId" asp-for="CountryId" class="form-control">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <h6 class="text-left" style="padding:0;margin:0"> Title </h6>
                    <input asp-for="Title" type="text" class="form-control mt-2" />
                </div>
                <div class="mb-4">
                    <h6 class="text-left" style="padding:0;margin:0"> Period </h6>
                    <div class="row mt-2">
                        <div class="col-6">
                            <select asp-for="FromMonth" class="form-control">
                                <option selected disabled hidden>
                                    Month
                                </option>
                                <option value="1"> January </option>
                                <option value="2"> February </option>
                                <option value="3"> March </option>
                                <option value="4"> April </option>
                                <option value="5"> May </option>
                                <option value="6"> June </option>
                                <option value="7"> July </option>
                                <option value="8"> August </option>
                                <option value="9"> September </option>
                                <option value="10"> October </option>
                                <option value="11"> November </option>
                                <option value="12"> December </option>
                            </select>
                            <span asp-validation-for="FromMonth"></span>
                        </div>
                        <div class="col-6">
                            <select asp-for="FromYear" class="form-control">
                                <option selected disabled hidden>
                                    Year
                                </option>
                                @for (int i = 2028; i >= 1950; i--)
                                {
                                    <option value="@i"> @i </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <h6 class="text-left text-muted" style="padding:0;margin:0"> Through </h6>
                    <div class="row mt-2">
                        <div class="col-6">
                            <select asp-for="ToMonth" class="form-control">
                                <option selected disabled hidden>
                                    Month
                                </option>
                                <option value="1"> January </option>
                                <option value="2"> February </option>
                                <option value="3"> March </option>
                                <option value="4"> April </option>
                                <option value="5"> May </option>
                                <option value="6"> June </option>
                                <option value="7"> July </option>
                                <option value="8"> August </option>
                                <option value="9"> September </option>
                                <option value="10"> October </option>
                                <option value="11"> November </option>
                                <option value="12"> December </option>
                            </select>
                        </div>
                        <div class="col-6">
                            <select asp-for="ToYear" class="form-control">
                                <option selected disabled hidden>
                                    Year
                                </option>
                                @for (int i = 2028; i >= 1950; i--)
                                {
                                    <option value="@i"> @i </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h6 class="text-left" style="padding:0;margin:0"> Description <span class="text-muted">(Optional)</span> </h6>
                    <textarea asp-for="Description" style="height:160px" class="form-control mt-2"></textarea>
                </div>
                <div class="offset-8 mb-3">
                    <button type="button" class="btn text-success bg-white" style="border-color:lightgrey" data-dismiss="modal"> Cancel </button>
                    <button type="button" class="btn btn-success" style="border-color:lightgrey" data-save="modal"> Save </button>
                </div>
            </div>
        </form>
    </div>
</div>

