@model Upwork.Models.Project

@{
    ViewData["Title"] = "Create project ";
}
@section Style {
    <link href="~/css/CreateProject.css" rel="stylesheet" />
}

<div class="container">
    <!--Steps nav-->
    <div class="">
        <nav class="steps">
            <ul class=" d-flex justify-content-between">
                <li class="step-item">
                    <button class="step-btn ">
                        <p class="step-number text-center"> 1 </p>
                        <p class="step-name">OverView</p>
                    </button>
                </li>
                <li class="step-item">
                    <button class="step-btn">
                        <p class="step-number text-center"> 2 </p>
                        <p class="step-name">Pricing</p>
                    </button>
                </li>
                <li class="step-item">
                    <button class="step-btn">
                        <p class="step-number text-center"> 3 </p>
                        <p class="step-name">Gallary</p>
                    </button>
                </li>
                <li class="step-item">
                    <button class="step-btn current">
                        <p class="step-number text-center"> 4 </p>
                        <p class="step-name">Description</p>
                    </button>
                </li>
                <li class="step-item">
                    <button class="step-btn">
                        <p class="step-number text-center"> 5 </p>
                        <p class="step-name">Requiements</p>
                    </button>
                </li>
                <li>
                    <button class="step-btn">
                        <p class="step-number text-center"> 6 </p>
                        <p class="step-name">Review</p>
                    </button>
                </li>
            </ul>
        </nav>
    </div>
    <!-- end Steps nav-->
    <!--content-->
    <div class="row">
        <!--step form-->
        <div class="col-lg-8 col-12">
            <div class="bg-white" id="form-content">
                <div class="form-head">
                    <div class="container">
                        <h4> <b>Project description </b></h4>
                    </div>
                </div>
                <form class="py-3" asp-action="Description" method="post">
                    <div class="py-3 container">
                        <h4><b>Project summary</b></h4>
                        <p>Briefly explain what sets you and your project apart.</p>
                        <textarea rows="4" asp-for="Description" class="form-control" placeholder="EXAMPLE: You will get a polished logo design that will bring your company to the next level. With over 5 years of experience in freelance and agency environments, I care deeply about helping startups tell their story through design. The work I deliver is 100% original and high quality">
                        </textarea>
                        <div class="form-head"></div>
                        <h4><b>Project steps</b></h4>
                        <p>List the steps involved in delivering your project.</p>
                        <ul class="  justify-content-between">
                            <li class="step-item">
                                <div class="step-btn current d-flex">
                                    <p class="step-number text-center"> 1 </p>
                                    <span> Client purchases the project and sends requirements.</span>
                                </div>
                            </li>
                            <li class="step-item">
                                <div class="step-btn current d-flex">
                                    <p class="step-number text-center"> 2 </p>
                                    <span class="step-name">
                                        You complete the project following the steps that you add here.
                                    </span>
                                </div>
                            </li>
                            <li class="step-item">
                                <div class="step-btn current d-flex">
                                    <p class="step-number text-center"> 3 </p>
                                    <span class="step-name">Client reviews and approves your work, and you get paid.</span>
                                </div>
                            </li>
                        </ul>
                        <div class="form-head"></div>
                        <div class="container">
                            <div class="row justify-content-between my-2">
                                <div class="col-8">
                                    <h4>Frequently asked questions</h4>
                                    <p>Answers to common questions your clients ask.</p>
                                </div>
                                <div class="col-4">
                                    <button type="button" class="text-green btn add-btn" onclick="displayForm()">Add a question <i class="fas fa-plus"></i> </button>
                                </div>

                            </div>
                                <div class="add-form my-2" >
                                    <div class="container">
                                        <textarea class="form-control" rows="3" placeholder="Enter a question that can be answered by freeform text, multiple choice or by uploading a file."></textarea>
                                        <div class="row justify-content-end">

                                            <div class="col-4">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" id="inlineFormCheck">
                                                    <label class="fs-6" for="inlineFormCheck">
                                                        <b> Mandatory requirement</b>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="end pt-3 mt-3">
                                            <div class="container">
                                                <div class="d-flex justify-content-end">
                                                    <div class="col-4">
                                                        <button class="btn-cancle">Cancle</button>
                                                        <button class="btn-save">Add</button>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            
                        </div>
                    </div>

                    <div class="end pt-3 mt-3">
                        <div class="container">
                            <div class="d-flex justify-content-between">
                                <div class="col-2">
                                    <div class="devBtnLight m-0 p-2 text-center">
                                        <h6 class="m-0 p-0">Back</h6>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <button class="btn-cancle ">Cancle</button>
                                    <button class="btn-save">Save &amp; Continue</button>
                                </div>

                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <!--end form-->
        <!--step description-->
        <div class="col-lg-4 col-12">
            <div id="step-description" class=" bg-white py-4">
                <div class="container">
                    <h6><b>Project details </b></h6>
                    <ul class="description-list container">
                        <li>
                            <p>Add more details about your offering and why clients should work with you.</p>
                        </li>
                        <li>
                            <p>Show potential clients the steps you take to complete your project.</p>
                        </li>
                        <li>
                            <p>Address common client questions to save the back and forth.</p>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <!--end description-->
    </div>
    <!-- end content-->
</div>

@section Scripts {
    <script>
        function displayForm() {
            $(".add-form").css("display", "block");
            /*$("").css("background-color", "yellow");*/
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}