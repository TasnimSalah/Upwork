@model List<Skill>
    <div class="container">
        <div class="row">
            @foreach (var i in Model)
            {
                <div class="col-4 my-2">
                    @Html.CheckBox($@"Skills.{i.SkillId}")
                    @Html.DisplayFor(modelItem => i.Name)

                </div>
            }
        </div>
    </div>